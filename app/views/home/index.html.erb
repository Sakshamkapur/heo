<h1>Home</h1>

<% if current_user %>
  <div>Hey <%= current_user.username %></div>
  <%user_fb_info = current_user.facebook.get_object("me?fields=birthday,link")%>
  <a target="_blank" href=<%=user_fb_info['link']%> ><%= image_tag(current_user.userimage) %> </a>
  <%=user_fb_info["birthday"]%>
<% end %> 

<% unless current_user %>
  <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
<% else %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>